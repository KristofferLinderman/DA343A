package p1;

import javax.swing.Icon;

public class ArrayProducer implements IconProducer {
	private Icon[] icons;
	private int delay = 0;
	private int times = 0;
	private int currentIndex = -1;
	
	/***
	 * Sätter icons, delay och times.
	 * @param icons
	 * @param delay
	 * @param times
	 */
	public ArrayProducer(Icon[] icons, int delay, int times) {
		this.delay = delay;
		this.times = times;
		this.icons = icons;
	}
	
	/***
	 * returnerar delay
	 * @return delay
	 */
	@Override
	public int delay() {
		return delay;
	}

	/***
	 * returnerar times
	 * @return times
	 */
	@Override
	public int times() {
		return times;
	}

	/***
	 * returnerar size
	 * @return size
	 */
	@Override
	public int size() {
		return (icons==null) ? 0 : icons.length;
	}

	/***
	 * returnerar en icon 
	 * @return icon
	 */
	@Override
	public Icon nextIcon() {
		if(icons==null || icons.length==0)
		    return null;
		currentIndex = (currentIndex+1) % icons.length;
		return icons[currentIndex];
	}
	
	
}
